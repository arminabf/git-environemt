[user]
name=<your name>
email=<your address>

[alias]
ci=commit
co=checkout
st=status
praise=blame
graph=log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
graph2=log --graph --date-order -C -M --pretty=format:'<%h> %ad [%an] %Cgreen%d%Creset %s' --all --date=relative
ls=ls-files

[apply]
whitespace=strip

[diff]
color=auto
rename=copy
tool = meld

[pager]
color=true

[status]
color=auto
[core]
editor=vim
excludesfile = ~/.gitignore.global
[push]
default = current
